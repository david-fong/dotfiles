// seems like wayland can read from here, but X11 needs me to copy this to /usr/share/.../types/complete
default xkb_types "complete" {
  virtual_modifiers Alt, LevelThree, LevelFive;

  include "basic"
  include "mousekeys"
  include "pc"
  include "iso9995"
  include "level5"
  include "extra"
  include "numpad"

  type "ALT_NAV" {
    modifiers = Shift + Alt;
    map[None]      = Level1;
    map[Shift]     = Level2;
    map[Alt]       = Level3;
    map[Shift+Alt] = Level3;
    preserve[Shift+Alt] = Shift;
    level_name[Level1] = "Base";
    level_name[Level2] = "Caps";
    level_name[Level3] = "Custom";
  };

  type "DF_LVL3" {
    modifiers = Shift + LevelThree;
    map[None]             = Level1;
    map[Shift]            = Level2;
    map[LevelThree]       = Level3;
    map[Shift+LevelThree] = Level3;
    preserve[Shift+LevelThree] = Shift;
    level_name[Level1] = "Base";
    level_name[Level2] = "Shift";
    level_name[Level3] = "Custom";
  };

  type "DF_LVL4" {
    modifiers = Shift + LevelThree;
    map[None]             = Level1;
    map[Shift]            = Level2;
    map[LevelThree]       = Level3;
    map[Shift+LevelThree] = Level4;
    preserve[Shift+LevelThree] = Shift;
    level_name[Level1] = "Base";
    level_name[Level2] = "Shift";
    level_name[Level3] = "Custom";
    level_name[Level4] = "Custom";
  };

  type "DF_LVL5" {
    modifiers = Shift + LevelFive;
    map[None]             = Level1;
    map[Shift]            = Level2;
    map[LevelFive]        = Level5;
    map[Shift+LevelFive]  = Level5;
    preserve[Shift+LevelFive] = Shift;
    level_name[Level1] = "Base";
    level_name[Level2] = "Shift";
    level_name[Level5] = "Custom";
  };

  type "DF_LVL6" {
    modifiers = Shift + LevelFive;
    map[None]             = Level1;
    map[Shift]            = Level2;
    map[LevelFive]        = Level5;
    map[Shift+LevelFive]  = Level6;
    level_name[Level1] = "Base";
    level_name[Level2] = "Shift";
    level_name[Level5] = "Custom";
    level_name[Level6] = "Custom";
  };
};
